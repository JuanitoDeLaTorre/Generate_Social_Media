<%- include('./partials/header.ejs', { user: currentUser }) %>

<body>
    <div class="mainWrapper">
        <%- include('./partials/sideNav.ejs', { user: currentUser }) %>

        <div class="userInfo">
            <h1>All Users</h1>
            <% users.forEach((user) => { %>
                <div class="userWrapper">
                    <img src="<%= user.profilePic %>" style = "height: 30px; width: 30px; border-radius: 100%; object-fit: cover;" alt="<%= user.username %>">
                    <div id="profileName" style = "display: flex; flex-direction: column; color: white">
                    <a href="/profile/<%=user.username %>"><%= user.username %></a>
                    
                    </div>
                    <p>Total Posts: <%= user.postCount %></p>
                    <hr>
                </div>
                
            <% }); %>
                
        </div>

