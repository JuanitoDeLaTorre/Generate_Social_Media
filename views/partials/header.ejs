<%- include('./head.ejs') %>

<header>
    <a href=""><h2 style = "text-shadow: 0px 0px 5px white;">GENERATE</h2></a>
    <div class="search">
        <input type="text" placeholder="Search accounts, hashtags, etc...">
        <a href=""><img src="/images/searchlogo.png" alt="magnifying glass search logo"></a>
    </div>
    <div id = "right">
        <a href=""><button id = "upload">+ Upload</button></a>
        <% if(!user) { %>
            <a href="http://localhost:4000/signUp"><button class = "magentaButton">Log in</button></a>
        <% } else { %>
            <a href="http://localhost:4000/signUp"><button class = "magentaButton"><%= user %></button></a>
        <% } %>
        <a href="http://localhost:4000/signIn"><img id = "options" src="/images/options.png" alt="search option dots"></a>
    </div>
</header>

